<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Colored rectangle-->
    <item>
        <shape>
            <size
                android:width="100dp"
                android:height="20dp" />
            <solid android:color="@color/colorAccent" />
        </shape>
    </item>

    <item
        android:right="-40dp"
        android:top="-40dp">
        <rotate
            android:fromDegrees="-60"
            android:pivotX="100%">
            <shape>
                <solid android:color="@color/colorPrimary" />
            </shape>
        </rotate>
    </item>
</layer-list>
